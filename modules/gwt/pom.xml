									<filtering>false</filtering>
									<excludes>
          								<exclude>**/*.java</exclude>
        							</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>-->
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>org/locationtech/jtsemul/**/*.java</exclude>
					</excludes>
				</configuration>
				<version>3.7.0</version>
			</plugin>
		</plugins>
	</build>
</project>
