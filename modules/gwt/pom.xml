						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}</outputDirectory>
							<resources>
								<resource>
									<directory>${sources.preprocessed.dir}</directory>
									<filtering>false</filtering>
									<excludes>
          								<exclude>**/*.java</exclude>
        							</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
					<!--<execution>
						<id>copy-test-resources2</id>
